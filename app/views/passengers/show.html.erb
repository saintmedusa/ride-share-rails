<div class="todo_card">
  <h2><%= @passenger[:name]%></h2>
  <br>
  <p><%= @passenger[:phone_num]%></p>
  <p>Running Total:</p>
  <%# RESOURCE: https://apidock.com/rails/ActiveRecord/Calculations/sum %>
  <p> 
  <p> <%= @passenger.sum.nil? ? "No Trips": @passenger.sum %>
 </p>
  <p>Trips:</p>
<table>                         
  <tr>                          
    <th>Date</th>
    <th>Cost</th>
  </tr>
<% @passenger.trips.each do |trip| %>  
  <tr>
    <td><%= trip.date %></td>
    <td><%= trip.cost %></td>  
  </tr>
<% end %>                       
</table> 

</div>